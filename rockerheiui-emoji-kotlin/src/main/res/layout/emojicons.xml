<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_above="@+id/line"
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <View android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_above="@+id/emojis_tab"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/emojis_tab"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/orange" />

        <ImageButton
            android:background="@drawable/orca_emoji_tab_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:id="@+id/emojis_tab_0_recents"
            android:src="@drawable/orca_emoji_category_recent" />

    </LinearLayout>


    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/orange" />

        <ImageButton
            android:id="@+id/emojis_tab_1_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/orca_emoji_tab_background"
            android:scaleType="center"
            android:src="@drawable/orca_emoji_category_people" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/orange" />

        <ImageButton
            android:id="@+id/emojis_tab_2_nature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/orca_emoji_tab_background"
            android:scaleType="center"
            android:src="@drawable/orca_emoji_category_nature" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/orange" />

        <ImageButton
            android:id="@+id/emojis_tab_3_objects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/orca_emoji_tab_background"
            android:scaleType="center"
            android:src="@drawable/orca_emoji_category_objects" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/orange" />

        <ImageButton
            android:id="@+id/emojis_tab_4_cars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/orca_emoji_tab_background"
            android:scaleType="center"
            android:src="@drawable/orca_emoji_category_cars" />
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/orange" />

        <ImageButton
            android:id="@+id/emojis_tab_5_punctuation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/orca_emoji_tab_background"
            android:scaleType="center"
            android:src="@drawable/orca_emoji_category_punctuation" />

    </LinearLayout>

        <ImageButton
            android:background="#e6e6e6"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:id="@+id/emojis_backspace"
            android:src="@drawable/orca_emoji_backspace_back_normal" />

    </LinearLayout>


</RelativeLayout>
